<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmarConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dataAtividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_medium"
        android:text="00/00/0000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeCompleto" />

    <TextView
        android:id="@+id/nomeCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppins_medium"
        android:text="NOME"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloAddActivity2" />

    <TextView
        android:id="@+id/tituloAddActivity2"
        android:layout_width="393dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Adicionar Actividade"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/longitudeActivity"
        android:layout_width="155dp"
        android:layout_height="49dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Longitude"
        android:inputType="text|numberDecimal"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/departamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/departamento"
        app:layout_constraintTop_toBottomOf="@+id/dataAtividade"
        app:layout_constraintVertical_bias="0.883" />

    <EditText
        android:id="@+id/latitudeActivity"
        android:layout_width="155dp"
        android:layout_height="49dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Latitude"
        android:inputType="text|numberDecimal"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/departamento"
        app:layout_constraintEnd_toEndOf="@+id/departamento"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataAtividade"
        app:layout_constraintVertical_bias="0.883" />

    <Spinner
        android:id="@+id/departamento"
        android:layout_width="326dp"
        android:layout_height="45dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/rounded_corner"
        android:clickable="false"
        android:ems="10"
        android:hint="Departamento"
        android:paddingLeft="10dp"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/localizacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/localizacao"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Localidade"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddNewActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataAtividade"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonAddNewActivity"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/poppins_medium"
        android:text="Add"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>